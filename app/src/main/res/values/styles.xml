<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/md_grey_600</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="windowActionBar">false</item>

        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="windowNoTitle">true</item>

        <!-- it should be true otherwise action mode will not overlay toolbar -->
        <item name="windowActionModeOverlay">true</item>

        <!-- For Custom Action Mode Background Color/Drawable -->
        <item name="actionModeBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ReadPopupMenuItemImageButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="BackgroundButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:state_selected">true</item>
        <item name="android:clickable">true</item>
        <item name="android:button">@null</item>
        <item name="android:selectable">true</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="windowTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:minLines">1</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="contentDialogStyle" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowTitleStyle">@style/windowTitle</item>
        <item name="android:windowBackground">@color/windowBackgroundColor</item>

    </style>

    <style name="fontDialogStyle" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@color/windowBackgroundColor</item>

    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/toolbar_title_color</item>
    </style>
</resources>
