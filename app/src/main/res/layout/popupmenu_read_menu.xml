<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/content"
            style="@style/ReadPopupMenuItemTextView"
            android:drawableTop="@mipmap/ic_catalog_day" />

        <TextView
            android:id="@+id/progress"
            style="@style/ReadPopupMenuItemTextView"
            android:drawableTop="@mipmap/ic_progress_day" />

        <TextView
            android:id="@+id/font"
            style="@style/ReadPopupMenuItemTextView"
            android:drawableTop="@mipmap/ic_textsize_day" />

        <TextView
            android:id="@+id/brightness"
            style="@style/ReadPopupMenuItemTextView"
            android:drawableTop="@mipmap/ic_brightness_day" />

    </LinearLayout>
</LinearLayout>