<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/brightness_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_brightness_low_black_18dp" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/brightness_low"
            android:layout_toStartOf="@+id/brightness_high" />

        <ImageView
            android:id="@+id/brightness_high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_brightness_high_black_18dp" />

        <View
            android:id="@+id/split"
            android:layout_below="@id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="#10757575" />

        <RadioGroup
            android:layout_below="@id/split"
            android:id="@+id/font_custom_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="-5dp"
            android:layout_marginStart="-5dp"
            android:orientation="horizontal">

        </RadioGroup>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#10757575" />

    <Button
        android:paddingStart="-20dp"
        android:paddingEnd="-20dp"
        android:background="?attr/selectableItemBackground"
        android:id="@+id/touch_mode"
        android:text="@string/page_touch_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>